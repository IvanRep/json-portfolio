---
const { title, avoidBreak } = Astro.props
---


<section class={avoidBreak ? 'avoid-break' : ''}>
    {title && <h2>{title}</h2>}
    <slot />
</section>

<style>
    section {
        max-width: 700px;
        margin: 0 auto 48px;
    }

    h2 {
        margin-bottom: 8px;
        font-weight: 800;
        line-height: 1.5;
        font-size: 1.5rem;
    }
</style>