---
import Section from "@/components/Section.astro";
import { projects } from '@cv';
---

<Section title="Proyectos" avoidBreak={true}>

    <ul>
        {
            projects.map(({name, url, description, highlights, isActive }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                <a href={url} title={`Ver el proyecto ${name}`}>
                                    {name}
                                </a>
                                {
                                    isActive && <span>&bull;</span>
                                }
                                </h3>
                                <p>{description}</p>
                            </header>
                            <footer>
                                <ul>
                                    {
                                        highlights.map((highlight) => {
                                            return <li>{highlight}</li>
                                        })
                                    }
                                </ul>
                            </footer>
                        </article>    
                    </li>
                )
            })
        }
    </ul>
</Section>


<style>
    ul {
        display: grid;
        grid-template-columns: repeat(
            auto-fit, 
            minmax(200px, 1fr)
        );
        gap: 1rem;
    }

    article {
        border-radius: 8px;
        border: 1px solid var(--project-border-color);
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 4px;
    }

    article h3 span {
        color: var(--project-active-color);
    }

    article a {
        color: var(--h-color);
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.75rem;
        line-height: 1.2rem;
    }

    article footer {
        display: inline-flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    article footer li {
        border-radius: 6px;
        background: var(--project-highlight-background);
        color: var(--project-highlight-color);
        font-size: 0.7rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>