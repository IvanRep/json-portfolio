---
import { basics } from '@cv';
import Section from '@/components/Section.astro';
import World from '@/icons/World.astro';
import Mail from '@/icons/Email.astro';
import Phone from '@/icons/Phone.astro';
import LinkedIn from '@/icons/Linkedin.astro';
import Github from '@/icons/Github.astro';
import Twitter from '@/icons/Twitter.astro';
import Instagram from '@/icons/Instagram.astro';

const { name, label, image, location, profiles, phone, email } = basics;
const { city, region } = location;

const SOCIAL_ICONS: Record<string, any> = {
    Github,
    LinkedIn,
    Twitter,
    Instagram
}
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <World />
                {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a 
                        href={`mailto:${email}`}
                        title={`Enviar un correo electrónico a ${name} al correo ${email}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                            <span class="icon"><Mail /></span> <span class="print">{email}</span>
                        </a>
                    )
                }
                {
                    phone && (
                        <a 
                        href={`tel:${phone}`}
                        title={`Llamar por télefono a ${name} al número ${phone}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                            <span class="icon"><Phone /></span> <span class="print">{phone}</span>
                        </a>
                    )
                }
                {
                    profiles.map(({network, url, username}) => {
                        const Icon = SOCIAL_ICONS[network];

                        return (
                            <a
                                href={url}
                                title={`Buscar a ${name} en ${network}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <span class="icon"><Icon /></span> <span class="print">{url}</span>
                            </a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: var(--h2-soft-color);
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    figure {
        position: relative;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 172px;
        border-radius: 16px;
        z-index: 0;
    }

    figure::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        box-shadow: 0 0 5px 5px var(--background-color) inset;
    }

    .info>span {
        color: var(--place-color);
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
    }

    footer {
        display: flex;
        gap: 0.5rem;
        margin-top: 8px;
        font-size: 0.65rem;
        flex-wrap: wrap;
    }

    footer a {
        color: var(--socials-color);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.25rem;
    }

    footer a .icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--hover-color);
        border-radius: 6px;
        padding: 6px;
        height: 32px;
        width: 32px;
        transition: all .3s ease;
    }

    footer a:hover {
        background: var(--hover-color);
        border-color: var(--hover-border-color);
        border-radius: 6px;
    }

    @media print {
        footer {
            row-gap: 0.25rem;
            column-gap: 1rem;
        }
    }
</style>