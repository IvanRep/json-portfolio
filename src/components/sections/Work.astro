---
import Section from "@/components/Section.astro";
import { work } from '@cv';
---

<Section title="Experiencia">

    <ul>
        {
            work.map(({name, startDate, endDate, position, summary, highlights}) => {
                const startYear = new Date(startDate).getFullYear();
                const endYear = endDate != null ? new Date(endDate).getFullYear() : null;
                const years = endYear != null ? `${startYear} - ${endYear}` : startYear;
                
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{name}</h3>
                                    <h4>{position}</h4>
                                </div>

                                <time>{years}</time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                                <div class="highlights">
                                    { highlights.map((highlight) => <div class="highlight">{highlight}</div>) }
                                </div>
                            </footer>
                            
                        </article>    
                    </li>
                )
            })
        }
    </ul>

</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 700;
        color: #111;
    }

    article h4 {
        font-weight: 500;
        color: #222;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        color: #555;
        font-size: 0.85rem;
    }
    div.highlights {
        display: flex;
        gap: 4px;
        flex-wrap: wrap;
    }
    div.highlight {
        border-radius: 6px;
        background: #aaa;
        color: #fff;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>