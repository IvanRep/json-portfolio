---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" type="image/svg+xml" href="favicon.svg?" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {

		--background-color: light-dark(#fff, #111);
		--p-color: #666;
		--h-color: #111;
		--h2-color: #222;
		--h2-soft-color: #444;
		--time-color: #555;
		--hover-color: #eee;
		--hover-border-color: #aaa;
		--primary-highlight-background: #333;
		--secondary-highlight-background: #aaa;
		--place-color: #666;
		--socials-color: #777;


		/* Projects */
		--project-border-color: #f2f2f2;
		--project-active-color: rgb(0, 188, 64);
		--project-highlight-background: #eee;
		--project-highlight-color: #333;

		/* Keyboard Manager */
		--km-color: black;
		--km-background-color: #fdfdfd;
		--km-border-color: #eee;
		--kbd-background-color: #fafafa;
		--kbd-border-color: #ddd;
		--kbd-shadow-color: rgba(0,0,0,0.1);
	}
	html {
		font-family: Menlo, Monaco, Lucida Console, 'Courier New', Courier, monospace;
		background-color: var(--background-color);
		letter-spacing: -0.025em;
	}

	body, 
	figure {
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
		
	}

	ul {
		margin: 0;
		padding: 0;
		list-style: none;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
		color: var(--h-color);
		font-family: 
			system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
	}

	p {
		color: var(--p-color);
		font-size: 0.9rem;
		margin: 0;
		line-height: 1.4;
		text-wrap: pretty;
	}

	section {
		break-inside: avoid;
	}

	.print {
        display: none !important;
    }

	@media print {
        .print {
            display: block !important;
        }
        .no-print {
            display: none !important;
        }
    }

	@media (prefers-color-scheme: dark) {
		:root {
			--background-color: #111;
			--p-color: #aaa;
			--h-color: #eee;
			--h2-color: #ddd;
			--h2-soft-color: #ccc;
			--time-color: #bbb;
			--hover-color: #333;
			--hover-border-color: #888;
			--primary-highlight-background: #ccc;
			--secondary-highlight-background: #bbb;
			--place-color: #aaa;
			--socials-color: #eee;


			/* Projects */
			--project-border-color: #2f2f2f;
			--project-active-color: rgb(0, 188, 64);
			--project-highlight-background: #ccc;
			--project-highlight-color: #111;

			/* Keyboard Manager */
			--km-color: #fff;
			--km-background-color: #1f1f1f;
			--km-border-color: #333;
			--kbd-color: #1f1f1f;
			--kbd-background-color: #fafafa;
			--kbd-border-color: #ddd;
			--kbd-shadow-color: rgba(0,0,0,0.1);
		}
	}

</style>
